{
  "version": 2,
  "builds": [
    { "src": "dist/public/**", "use": "@vercel/static" },
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "handle": "filesystem" },
    {
      "src": "^/api/(.*)$",
      "dest": "/api/index.ts"
    },
    {
      "src": "^/assets/(.*)$",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "^/(.*)$",
      "dest": "/dist/public/index.html"
    }
  ]
}