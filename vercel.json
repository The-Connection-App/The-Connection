{
  "version": 2,
  "routes": [
    {
      "src": "^/$",
      "dest": "/dist/public/index.html"
    },

    { "handle": "filesystem" },

    {
      "src": "^/api/(.*)$",
      "dest": "/api/index.ts"
    },

    {
      "src": "^/assets/(.*)$",
      "dest": "/dist/public/assets/$1"
    },

    {
      "src": "^/(.*)$",
      "dest": "/dist/public/index.html"
    }
  ]
}