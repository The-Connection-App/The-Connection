{
  "name": "theconnectionmobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:ios-local": "expo prebuild --platform ios && (cd ios && xcodebuild -workspace TheConnectionMobile.xcworkspace -scheme TheConnectionMobile -configuration Release -destination 'generic/platform=iOS')",
