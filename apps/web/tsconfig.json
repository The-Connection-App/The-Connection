{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "types": ["vite/client", "node", "../../types/shared-env"],
    "paths": {
      "shared/*": ["../../shared/*"],
      "shared-env": ["./src/env.web"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
