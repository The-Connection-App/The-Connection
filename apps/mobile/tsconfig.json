{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "baseUrl": ".",
  "types": ["node", "../../types/shared-env", "nativewind/types"],
    "paths": {
      "shared/*": ["../../shared/*"],
      "shared-env": ["./src/env.native"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": ["src", "app"],
  "exclude": ["node_modules", "dist"]
}
